@inject IBotService BotService
@inject NavigationManager NavigationManager

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">TelegramChatBlazor.Web</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>
<div class="@NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        @foreach (var item in Bot)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" @onclick="(()=>Redirect(item.UserName))">
                    <span class="oi oi-home" aria-hidden="true"></span> @item.Name
                </NavLink>
            </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="bots">
                <span class="oi oi-plus" aria-hidden="true"></span> Bots
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private List<Domain.Models.Bot> Bot = new List<Domain.Models.Bot>();

    protected override async Task OnInitializedAsync()
    {
        Bot = BotService.GetAll();
    }

    private void Redirect(string value)
    {
        NavigationManager.NavigateTo("/chat/" + value,true);
    }

    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

}
